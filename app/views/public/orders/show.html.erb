<div id="orders-show-main-visual"></div>

<div class="container my-5">
  <div class="row mb-3">
    <h3>注文履歴詳細</h3>
  </div>
  <div class="row mb-1">
    <h4>注文情報</h4>
  </div>
  <div class="row">
    <div class="col-9 pl-0">
      <table class="table table-bordered small">
        <thead>
          <tr>
            <th class="col-2 table-active">注文日</th>
            <th class="table-active">配送先</th>
            <th class="col-2 table-active">支払方法</th>
            <th class="col-2 table-active">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td>
              〒<%= @order.postcode %><br>
              <%= @order.address %><br>
              <%= @order.recieve_name %>
            </td>
            <td>
              <%= @order.payment_method %>
            </td>
            <td>
              <%= @order.order_status %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3 pr-0">
      <table class="table table-bordered text-center small">
        <tr>
          <th class="col-6 table-active">商品合計</th>
          <td class="col-6"><%= @order.total_price - @order.shipping_fee %></td>
        </tr>
        <tr>
          <th class="table-active">配送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
          <th class="table-active">ご請求額</th>
          <td><%= @order.total_price %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-2">
    <h3>請求情報</h3>
  </div>
  <div class="row">
    <h4>注文内容</h4>
  </div>
  <div class="row col-9 pl-0">
    <table class='table table-bordered small'>
      <thead>
        <tr>
          <th class="table-active">商品</th>
          <th class="table-active">単価（税込）</th>
          <th class="table-active">個数</th>
          <th class="table-active">小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |item| %>
        <tr>
          <td><%= item.item.name %></td>
          <td><%= item.price_including_tax %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price_including_tax * item.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>









