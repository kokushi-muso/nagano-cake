<h4 class="ml-4 my-4 bg-light px-3 d-inline d-inline-flex">ログイン</h2>
<div><p class='ml-5 d-inline d-inline-flex bg-light'>管理者の方はこちらからログインしてください</p></div>


<div class="container ml-5">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row mb-3">
      <label class="col-lg-2 pl-0 ml-lg-4 ">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field row mb-3">
      <label class="col-lg-2 pl-0 ml-lg-4">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="row">
      <label class="lg-col-2 pl-0 ml-lg-4"></label>
      <%= f.submit "ログイン", class:'btn btn-info offset-lg-2 px-3' %>
    </div>
  <% end %>
</div>
