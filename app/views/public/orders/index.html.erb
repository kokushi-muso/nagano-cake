<div class="container col-md-10">

<h1>注文履歴一覧</h1>

<table class='table small'>
  <thead>
    <tr>
      <th class="col-1">注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th class="col-1">支払金額</th>
      <th class="col-1">ステータス</th>
      <th class="col-1">注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td>〒<%= order.postcode %><br>
        <%= order.address %><br>
        <%= order.recieve_name %>
      </td>
      <td>
        <% order.order_items.each do |item| %>
        <%= item.item.name %>
        <% end %>
      </td>
      <td>
        <%= order.total_price.to_s(:delimited) %>円
      </td>
      <td>
        <%= order.order_status %>
      </td>
      <td>
        <%= link_to "表示する", order_path(order), class: "btn btn-primary" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  
</div>