<%= attachment_image_tag @item, :image, size:"50x50" %>
<%= @item.name %>
<%= @item.introduction  %>
￥<%= @item.price_excluding_tax.to_s(:delimited) %>（税込）

<%= form_with model: @cart, local: true do |f| %>
  <%= f.select :quantity, ["1","2","3","4","5"], { include_blank: '個数選択'} %>
  <!--プルダウンリストの数を決め、それを短く記述できるコードを考える。-->
  <%= f.submit "カートに入れる", class: 'btn btn-success' %>
<% end %>