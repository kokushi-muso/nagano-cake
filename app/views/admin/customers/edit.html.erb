<main>
  <div class = "container">
    <h1><%= @customer.last_name + " " + @customer.first_name %>さんの会員情報編集</h1>
    
      <%= form_with model:@customer, url: admin_customer_path(@customer.id), local:true do |f| %>
      
        <div class = "form-group">
          <label class ="customer_id">会員ID</label>
            <div class = "form-cntrol">
              <%= @customer.id %>
            </div>
        </div>      
        
        <div class = "form-group">
          <label class ="customer_name">氏名</label>
           <div class = "display:inline-flex">
            <%= f.text_field :last_name, size: "25" %>
            <%= f.text_field :first_name, size: "25" %>
          </div>
        </div>
        
        <div class = "form-group">
          <label class ="customer_name_kana">フリガナ</label>
           <div class = "display:inline-flex">
            <%= f.text_field :last_name_kana, size: "25" %>
            <%= f.text_field :first_name_kana, size: "25" %>
          </div>
        </div>
        
        <div class = "form-group">
          <label class ="customer_nam">フリガナ</label>
           <div class = "display:inline-flex">
            <%= f.text_field :last_name_kana, size: "25" %>
            <%= f.text_field :first_name_kana, size: "25" %>
          </div>
        </div>
        
        
       
      <% end %>
  </div>
</main>