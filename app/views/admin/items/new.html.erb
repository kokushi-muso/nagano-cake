<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-md-12">
        <h1>商品新規登録</h1>
        
        <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
        
        <div class = "form-group">
          <label for ="item_image">商品画像</label>
          <%= f.attachment_field :image, :placeholder => "選択されていません" %>
     

        </div>
        
        <div class = "form-group">
          <label for = "item_name">商品名</label>
          <%= f.text_field :name, :placeholder => "商品名" %>
        </div>
        
        <div class = "form-group">  
          <label for = "item_introduction">商品説明</label>
          <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %>
        </div>
        
         
        <div class = "form-group">
          <label for = "genre_nanme">ジャンル</label>
          <%= f.select :genre_id, Genre.all.map {|genre| [genre.name, genre.id]},include_blank: "選択して下さい" %>
        </div>
       
        
        <div class = "form-group">
          <label for = "price_excluding_tax">税抜価格</label>
          <%= f.text_field :price_excluding_tax, placeholder: "1000" %>円
        </div>
        
        <div class = "form-group">
          <label for = "is_active">販売ステータス</label>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active,"販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active,"販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>
        <%= f.submit "新規登録",class: "btn btn-success" %>
        <% end %>
          
          
        </div>
      </div>
    </div>
  </div>
</main>