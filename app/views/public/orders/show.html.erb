<div class="container mt-4">
<h1>注文履歴詳細</h1>

<h4>注文情報</h4>
<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @order.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td>
        〒<%= @order.postcode %><br>
        <%= @order.address %><br>
        <%= @order.recieve_name %>
      </td>
      <td>
        <%= @order.payment_method %>
      </td>
      <td>
        <%= @order.order_status %>
      </td>
    </tr>
  </tbody>
</table>

<h1>請求情報</h1>
<table class="table">
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @order.total_price - @order.shipping_fee %>
      </td>
      <td>
        <%= @order.shipping_fee %>
      </td>
      <td>
        <%= @order.total_price %>
      </td>
    </tr>
  </tbody>
</table>

<h4>注文内容</h4>
<table class='table'>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
    <tr>
      <td><%= item.item.name %></td>
      <td><%= item.price_including_tax %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price_including_tax * item.quantity %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>