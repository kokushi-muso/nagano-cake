<main>
  <div class = "container">
    <h1>商品編集</h1>
    
      <%= form_with model:@item, url: admin_item_path(@item.id), local:true do |f| %>
      
        <div class = "form-group">
          <label class ="item_image">商品画像</label>
          <div class = "form-cntrol">
            <%= f.attachment_field :image, :placeholder => "選択されていません" %>
          </div>
        </div>
        
        <div class = "form-group ">
          <label class ="item_name">商品名</label>
            <div class = "form-cntrol">
              <%= f.text_field :name, :placeholder => "商品名",size: "50" %>
            </div>
        </div>
        
        <div class = "form-group">
          <label class = "item_introduction">商品説明</label>
          <div class = "form-cntrol">
            <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します",size: "50x10" %>
          </div>
        </div>
        
         
        <div class = "form-group">
          <label class = "genre_nanme">ジャンル</label>
            <div class = "form-cntrol">
              <%= f.select :genre_id, Genre.all.map {|genre| [genre.name, genre.id]},include_blank: "選択して下さい" %>
            </div>
        </div>
       
        
        <div class = "form-group">
          <label class = "price_excluding_tax">税抜価格</label>
            <div class = "form-cntrol">
              <%= f.text_field :price_excluding_tax,size: "50" %>円
            </div>
        </div>
        
        <div class = "form-group">
          <label class = "is_active">販売ステータス</label>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active,"販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active,"販売停止中", {value: :false, style: "display: inline-block;"} %>
           </div>
        <%= f.submit "変更を保存",class: "btn btn-success" %>
        </div>
      <% end %>
    
  </div>
</main>
