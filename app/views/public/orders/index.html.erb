<div id="orders-index-main-visual"></div>

<div class="container my-5 col-10">
  <div class="row pl-3 mb-4">
    <h3>注文履歴一覧</h3>
  </div>
  <div class="row col-12 m-0 p-0">
    <table class='table table-bordered small m-0 p-0'>
      <thead>
        <tr>
          <th class="col-1 table-active">注文日</th>
          <th class="table-active">配送先</th>
          <th class="table-active">注文商品</th>
          <th class="col-1 table-active">支払金額</th>
          <th class="col-1 table-active">ステータス</th>
          <th class="col-2 table-active text-center">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.created_at.strftime('%Y/%m/%d') %>
          </td>
          <td>〒<%= order.postcode %><br>
            <%= order.address %><br>
            <%= order.recieve_name %>
          </td>
          <td>
            <% order.order_items.each do |item| %>
            <%= item.item.name %>
            <% end %>
          </td>
          <td>
            <%= order.total_price.to_s(:delimited) %>円
          </td>
          <td>
            <%= order.order_status %>
          </td>
          <td class="text-center">
            <%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>




  
</div>