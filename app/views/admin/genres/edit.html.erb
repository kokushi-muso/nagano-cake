<div class="container pt-5">
  <div class="row">
    <h4 class="pb-3">ジャンル編集</h4>
      <div class="col-md-10">
      <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
        <table>
          <div class="form-group">
            <tr>
             <th><label for="genre_nanme">ジャンル名</label></th>
              <td><%= f.text_field :name, class:"form-control"  %></td>
              <td><%= f.submit "変更を保存",class: "btn btn-success" %></td>
            </tr>
          </div>
      </table>
      <% end %>
      </div>
    </div>
  </div>