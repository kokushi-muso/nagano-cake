<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>ジャンル編集</h1>
        <div class="form-group">
          <label for="genre_nanme">ジャンル名</label>
          <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
            <%= f.text_field :name, class:"form-control"  %>
            <%= f.submit "変更を保存",class: "btn btn-success" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</main>
