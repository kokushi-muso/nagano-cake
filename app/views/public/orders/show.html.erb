<h1>注文履歴詳細</h1>

<h4>注文情報</h4>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= @order.created_at.strftime('%Y/%m/%d') %>
      </td>

      <td>
        <%= @order.address %>
      </td>

      <td>
        <!--orderしたitemのname-->
      </td>

      <td>
        <%= @order.total_price %>
      </td>

      <td>
        <%= @order.order_status %>
      </td>
    </tr>
  </tbody>
</table>


<h1>請求情報</h1>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= @order.total_price %>
      </td>

      <td>
        <%= @order.shipping_fee %>
      </td>

      <td>
        <%= ご請求額を出す %>
      </td>
    </tr>
  </tbody>
</table>

<h4>注文内容</h4>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <% @order_items.each do |f| %>
      <td>
        <%= f.name %>
      </td>

      <td>
        <%= f.quantity %>
      </td>

      <td>
        <%= 小計 %>
      </td>
    </tr>
  </tbody>
</table>