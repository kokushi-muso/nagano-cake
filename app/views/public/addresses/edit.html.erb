<div class="container my-5">
  <h3 class="my-3">配送先編集</h3>
  <%= form_with model: @address, url: address_path, method: :PATCH, local: true do |f| %>
    <div class="row mb-3">
      <label class="col-lg-3">郵便番号(ハイフンなし)</label>
      <%= f.text_field :postcode, autocomplete: 'first_name', placeholder:"0000000" %>
    </div>

    <div class="row mb-3">
      <label class="col-lg-3">住所</label>
      <%= f.text_field :address, autoconplete: 'address', placeholder: '東京都渋谷区代々木神園町0-0', size: '50' %>
    </div>

    <div class="row mb-5">
      <label class="col-lg-3">宛名</label>
      <%= f.text_field :recieve_name, autoconplete: 'recieve_name', placeholder: '令和 道子', class: 'mr-4' %>
      <%= f.submit ' 変更内容を保存 ', class:'btn btn-success ml-5 px-4' %>
    </div>
  <% end %>
</div>