<header>ヘッダー</header>

<main>
  <%= attachment_image_tag @item, :image %>
  <%= @item.name %>
  <%= @item.introduction  %>
  <%= @item.price_including_tax %>
  <%= form_with model: @item do |f| %>
    <%= f.select :quantity, ["1","2","3","4","5"]
    # プルダウンリストの数を決め、それを短く記述できるコードを考える。
    <%= f.submit class: 'btn btn-success' %>
  <% end %>
</main>