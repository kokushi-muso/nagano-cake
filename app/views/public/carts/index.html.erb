<h1>ショッピングカート</h1>
<%= link_to "カートを空にする", cart_path(@carts), method: :delete, class: "btn btn-danger" %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td>
          <%= attachment_image_tag cart.item, :image, size:"50x50" %>
          <%= cart.item.name %>
        </td>

        <td>
          <%= (cart.item.price_excluding_tax * 1.1).to_i.to_s(:delimited) %>
          <!--to_s(:delimited)で3桁区切りを表示する-->
        </td>

        <td>
          <%= form_with model: cart do |f| %>
            <%= f.select :quantity, ["1","2","3","4","5"] %>
            <!--プルダウンリストの数を決め、それを短く記述できるコードを考える。-->
            <%= f.submit "変更", class: 'btn btn-success' %>
          <% end %>
        </td>

        <td>
          <%= ((cart.item.price_excluding_tax * 1.1).to_i * cart.quantity).to_s(:delimited) %>
        </td>

        <td>
          <%= link_to "削除する", cart_path(cart), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

