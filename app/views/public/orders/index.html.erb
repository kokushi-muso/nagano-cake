<h1>注文履歴一覧</h1>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= @order.created_at.strftime('%Y/%m/%d') %>
      </td>

      <td>
        <%= @order.address %>
      </td>

      <td>
        <!--orderしたitemのname-->
      </td>

      <td>
        <%= @order.total_price %>
      </td>

      <td>
        <%= @order.order_status %>
      </td>

      <td>
        <%= link_to "表示する", order_path(@order), class: "btn btn-success" %>
      </td>
    </tr>
  </tbody>
</table>