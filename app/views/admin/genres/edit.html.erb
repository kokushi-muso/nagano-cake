<main>
  <div class="container">
    <div class="row">
      <h1>ジャンル編集</h1>
        <div class="col-md-10">
          <table>
            <div class="form-group">
              <tr>
               <th><label for="genre_nanme">ジャンル名</label></th>
                <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
                <td><%= f.text_field :name, class:"form-control"  %></td>
                <td><%= f.submit "変更を保存",class: "btn btn-success" %></td>
                <% end %>
              </tr>
            </div>
        </table>
      </div>
    </div>
  </div>
</main>
