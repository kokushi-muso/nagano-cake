<main>
<div class = "container container-m">
  <h1>商品詳細</h1>
  <div class = "row">
    <div class = "col-md-4 img-hidden">
      <%= attachment_image_tag @item, :image, size: "150x150",  format: 'jpeg', fallback: "no_image.jpg" %>
    </div>
    <div class = "col-md-8">
      <div class = "item_name">
        <label>商品名</label>
        <%= @item.name %>
        </div>
      <div class = "item_introduction">
       <label>商品説明</label>
        <%= @item.introduction %>
      </div>
      
      <div class = "ganre">
       <label>ジャンル</label>
        <%= @genre.name %>
      </div>
      <div class = "price">
       <label>税込価格<br>(税込価格)</label>
       <%= @item.price_excluding_tax*1.1.round %>
        (<%= @item.price_excluding_tax %>)円
      </div>  
      
      <div class = "is_active">
       <label>販売ステータス</label>
        <%= @item.is_active ? "販売中" : "販売停止中" %>
      </div>
         
        <%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn-success" %>
    </div>
  </div>
  
</div>
</main>