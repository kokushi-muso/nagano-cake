<div class="container my-5">
<h3 class="my-3">配送先登録/一覧</h3>

<%= form_with model: @address, url: addresses_path, method: :POST, local: true do |f| %>
<div class="row mb-3">
  <label class="col-lg-3">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postcode, autocomplete: 'first_name', placeholder:"0000000" %>
</div>

<div class="row mb-3">
  <label class="col-lg-3">住所</label>
  <%= f.text_field :address, autoconplete: 'address', placeholder: '東京都渋谷区代々木神園町0-0', size: '50' %>
</div>

<div class="row mb-5">
  <label class="col-lg-3">宛名</label>
  <%= f.text_field :recieve_name, autoconplete: 'recieve_name', placeholder: '令和 道子', class: 'mr-4' %>
  <%= f.submit ' 新規登録', class:'btn btn-success ml-5 px-5' %>
</div>

<% end %>

<table class="table table-bordered col-md-12 col-lg-9">
  <tr class="table-active">
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
    <td></td>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td class="small"><%= address.postcode %></td>
    <td class="small"><%= address.address %></td>
    <td class="small"><%= address.recieve_name %></td>
    <td class="small"><%= link_to '編集する', edit_address_path(address), class:'btn btn-success btn-sm' %>
      <%= link_to '削除する', address_path(address), method: :DELETE, class:'btn btn-danger btn-sm' %></td>
  </tr>
  <% end %>
</table>
</div>