<main>
  <h1>商品一覧</h1><h4>（全<%= @items.count %>件）</h4>
  <% @items.each do |item| %>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, size:"50x50" %>
    <% end %>
    <%= item.name %>
    ￥<%= item.price_excluding_tax.to_s(:delimited) %>
  <% end %>
</main>

<%= paginate @items %>