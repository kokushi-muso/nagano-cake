 <div class = "container container">
    <h4>商品詳細</h4>
    <div class = "row">
      <div class = "col-md-4 img-hidden">
        <%= attachment_image_tag @item, :image, size: "300x250",  format: 'jpeg', fallback: "no_image.jpg" %>
      </div>
      <div class = "col-md-8">
        <table>
          <tr>
            <th width="200" height="50">商品名</th>
            <td width="400" height="50"><%= @item.name %></td>
          </tr>
          <tr>
            <th width="200" height="50">商品説明</th>
            <td width="400" height="50"><%= @item.introduction %></td>
          </tr>
          <tr>
            <th width="200" height="50">ジャンル</th>
            <td width="400" height="50"><%= @genre.name %></td>
          </tr>
          <tr>
            <th width="200" height="50">税込価格<br>(税抜価格)</th>
            <td width="400" height="50"><%= (@item.price_excluding_tax * 1.1).round.to_s(:delimited) %>
            (<%= @item.price_excluding_tax.to_s(:delimited) %>)円</td>
          </tr>
          <tr>
            <th width="200" height="50">販売ステータス</th>

            <td width="400" height="50"><%= @item.is_active ? "販売中" : "売切れ" %></td>

          </tr>
        </table>
        <%= link_to "編集する", edit_admin_item_path(@item.id),class: "btn btn-success" %>
      </div>
    </div>
  </div>


